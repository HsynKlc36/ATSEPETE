        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-blue">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="logo"><b>ADMIN </b>ATSEPETE</a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- Messages: style can be found in dropdown.less-->                      
                        <!-- Notifications: style can be found in dropdown.less -->
                         @await Component.InvokeAsync("RabbitMQCreatedOrdersMessage")
                        <!-- Tasks: style can be found in dropdown.less -->
                        
                       
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="~/image/man.png" class="user-image" alt="User Image" />
                                <span class="hidden-xs">ADMIN</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="~/image/man.png" class="img-circle" alt="User Image" />
                                    <p>
                                        ADMIN - Web Developer
                                        <small>@DateTime.Now.ToShortDateString()</small>
                                    </p>
                                </li>
                                <!-- Menu Body -->
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index" class="btn btn-default btn-flat">Profil</a>
                                    </div>
                                    <div class="pull-right">
                                        <a asp-area="" asp-controller="Login" asp-action="LogOut" class="btn btn-default btn-flat">Çıkış</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar" style="background-color:#FCD7A6; color:black">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/image/man.png" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>ADMIN</p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- search form -->
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search..." />
                        <span class="input-group-btn">
                            <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="header">ATSEPETE MENÜ</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tags"></i><span>KATEGORİ</span> <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li class=""><a asp-area="Admin" asp-controller="Category" asp-action="AddCategory"><i class="fa fa-circle-o"></i>KATEGORİ EKLE</a></li>
                            <li><a asp-area="Admin" asp-controller="Category" asp-action="CategoryList"><i class="fa fa-circle-o"></i>KATEGORİ LİSTELE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-home"></i>
                            <span>MARKET</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Admin" asp-controller="Market" asp-action="AddMarket"><i class="fa fa-circle-o"></i> MARKET EKLE</a></li>
                            <li><a asp-area="Admin" asp-controller="Market" asp-action="MarketList"><i class="fa fa-circle-o"></i> MARKET LİSTELE</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="pages/widgets.html">
                            <i class="fa fa-cart-plus"></i><span>SİPARİŞ</span><i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Admin" asp-controller="Order" asp-action="OrderList"><i class="fa fa-circle-o"></i>SİPARİŞ LİSTELE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-barcode"></i>
                            <span>ÜRÜN</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Admin" asp-controller="Product" asp-action="AddProduct"><i class="fa fa-circle-o"></i> ÜRÜN EKLE</a></li>
                            <li><a asp-area="Admin" asp-controller="Product" asp-action="ProductList"><i class="fa fa-circle-o"></i> ÜRÜN LİSTELE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-laptop"></i>
                            <span>ÜRÜN-MARKET</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Admin" asp-controller="ProductMarket" asp-action="AddProductMarket"></i> ÜRÜN-MARKET EKLE</a></li>
                            <li><a asp-area="Admin" asp-controller="ProductMarket" asp-action="ProductMarketList"></i> ÜRÜN-MARKET LİSTELE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-edit"></i>SİPARİŞ-DETAY
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-area="Admin" asp-controller="OrderDetail" asp-action="OrderDetailList"><i class="fa fa-circle-o"></i> SİPARİŞ-DETAY LİSTELE</a></li>
                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-file-text-o"></i><span>RAPOR</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a asp-action="ReportPage" asp-area="admin" asp-controller="Report"><i class="fa fa-circle-o"></i>RAPOR GÖRÜNTÜLE</a></li>
                        </ul>
                    </li>                   
                    <li class="header">BİLGİLENDİRME</li>
                    <li><a asp-action="StockList" asp-area="admin" asp-controller="Stock"><i class="fa fa-cubes"></i> STOK BİLGİLENDİRME</a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper">
            <section class="content"> 
                    @RenderBody()
            </section>
        </div>

        @await Component.InvokeAsync("NToastNotify")
        <!-- Right side column. Contains the navbar and content of the page -->
        <footer class="bg-dark text-light position-fixed" style="color:white">
            <div class="container py-5">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <h4 style="color: darkgoldenrod";>
                            ATSEPETE
                        </h4>
                        <p><span style="color: darkgoldenrod" ;>ATSEPETE</span>, online alışverişin en kolay hali. Siz de binlerce ürün arasından seçiminizi yapın.</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h4 style="color: darkgoldenrod" ;>Adres</h4>
                        <p>34000 İstanbul/Ataşehir<br> 5.cadde karanfil sokak çiçek mah. No:5</p>
                    </div>
                    <div class="col-md-4 mb-3">
                        <h4 style="color: darkgoldenrod" ;>İletişim</h4>
                        <p><i class="bi bi-telephone me-2"></i> 555-1234</p>
                        <p><i class="bi bi-envelope me-2"></i> info@atsepete.com</p>
                    </div>
                </div>
                <hr class="my-4">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <p>&copy; @DateTime.Now.Year <span style="color: darkgoldenrod" ;>ATSEPETE.</span> Tüm hakları saklıdır.</p>
                    </div>
                    <div class="col-md-6 mb-3" style="color: darkgoldenrod" ;>
                        <ul class="list-inline float-md-end">
                            <li class="list-inline-item"><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li class="list-inline-item"><a href="#"><i class="fa fa-instagram"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
     @*   <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.0
            </div>
            <strong>Copyright &copy; 2014-2015 <a href="http://almsaeedstudio.com">Almsaeed Studio</a>.</strong> All rights reserved.
        </footer>*@

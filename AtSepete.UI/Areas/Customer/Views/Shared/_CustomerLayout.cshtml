                        </div>
                        <div class="footer__copyright__payment"><img src="img/payment-item.png" alt=""></div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->


    <script src="~/bootstrap/js/customer_jquery-3.3.1.min.js"></script>
    <script src="~/bootstrap/js/customer_bootstrap.min.js"></script>
    <script src="~/bootstrap/js/customer_jquery.nice-select.min.js"></script>
    <script src="~/bootstrap/js/customer_jquery-ui.min.js"></script>
    <script src="~/bootstrap/js/customer_jquery.slicknav.js"></script>
    <script src="~/bootstrap/js/customer_mixitup.min.js"></script>
    <script src="~/bootstrap/js/Customer_owl.carousel.min.js"></script>
    <script src="~/bootstrap/js/customer_main.js"></script>
    <script src="~/js/cart_favorite_item_count.js"></script>


</body>

</html>


@{
    ViewData["Title"] = "AtSepete'ye Hoşgeldiniz";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title> @ViewData["Title"]</title>
    <!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- bootstrap core css -->
    <link href="~/lib/bootstrap/dist/css/indexbootstrap.css" rel="stylesheet" />

    <!-- fonts style -->
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,500|Poppins:400,700&display=swap" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/indexpagestyle.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/indexresponse.css" rel="stylesheet" />
</head>

<body>

    <div class="hero_area">
        
        <header class="header_section">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                       @* <img src="~/image/logo.png" alt="" /> <span>
                            ATSEPETE 
                        </span>*@
                        @*<img src="~/image/atsepetelogo3.png" style="width:100px;"/><span>*@
                        <img src="~/image/atsepetelogo5.png" style="width:150px;"/><span>
                            ATSEPETE 
                        </span>
                    </a>

                    <div class="navbar-collapse" id="">
                        <div class="container">
                            <div class=" mr-auto flex-column flex-lg-row align-items-center">
                                <div class="d-none d-lg-flex">
                                    <ul class="navbar-nav justify-content-between " style="margin-left:auto">   
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-action="Login" asp-controller="Login">
                                                GİRİŞ 
                                            </a>
                                           
                                        </li class="nav-item">
                                        <li>
                                             <a class="nav-link" href="#">
                                              /
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                             <a class="nav-link" asp-area="" asp-action="Register" asp-controller="Login">
                                                KAYIT OL
                                            </a>
                                        </li>
                                      
                                    </ul>
                                </div>                             
                            </div>
                        </div>
                    </div>

                    <div class="custom_menu-btn">
                        <button onclick="openNav()"></button>
                    </div>
                    <div id="myNav" class="overlay">
                        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                        <div class="overlay-content">
                            <a asp-area="" asp-controller="Login" asp-action="Login">GİRİŞ</a>
                            <a asp-area="" asp-controller="Login" asp-action="Register">KAYIT OL</a>
                            <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">ALIŞVERİŞE BAŞLA</a>
                        </div>
                    </div>
                </nav>
            </div>

        </header>

        <!-- end header section -->
        <!-- slider section -->
        <section class=" slider_section position-relative">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="slider_item-box">
                            <div class="slider_item-container">
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="offset-md-2 col-md-4">
                                            <div class="slider_item-detail">
                                                <div>
                                                    <h2 class="slider_heading">
                                                        50% İNDİRİM <br />
                                                        İLK SİPARİŞTE
                                                    </h2>
                                                    <p>
                                                       ATSEPETE ile Kozmetik ve Bakım ürünlerini Tüm Marketlerde Kıyasla ve Sana Uygun Olanı Hemen At Sepetine!
                                                    </p>
                                                    <div class="d-flex">
                                                      
                                                         <a class="slider_btn" asp-area="Customer" asp-controller="Shop" asp-action="HomePage">ALIŞVERİŞE BAŞLA</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="hero_img-box">
                                                <img src="~/image/hero.png" alt="" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                                      
                </div>              
            </div>
        </section>
        <!-- end slider section -->
    </div>

    <!-- detail section -->
    <section class="detail_section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="detail_img-box">
                        <img src="~/image/detail.png" alt="" class="w-100" />
                    </div>
                </div>
                <div class=" col-lg-7">
                    <div class="detail_container">
                        <div class="detail-box d-box-1">
                             
                            <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">
                                <div class="detail-content">
                                 
                                  <img src="~/image/woman.png" />
                                    <h5>
                                        KADIN
                                    </h5>
                                </div>
                            </a>
                        </div>
                        <div class="detail-box d-box-2">
                            <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">
                                <div class="detail-content">
                                    <img src="~/image/man.png" />
                                    <h5>
                                        ERKEK
                                    </h5>
                                </div>
                            </a>
                        </div>
                        <div class="detail-box d-box-3">
                            <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">
                                <div class="detail-content">
                                    <img src="~/image/kids.png" />
                                    <h5>
                                        BEBEK
                                    </h5>
                                </div>
                            </a>
                        </div>
                        <div class="detail-box d-box-4">
                            <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">
                                <div class="detail-content">
                                    <img src="~/image/home.png" />
                                    <h5 style="color:burlywood;">
                                        EV
                                    </h5>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end detail section -->
   
    <!-- find section -->
    <section class="find_section layout_padding-bottom">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6 col-md-8 offset-md-2">
                    <div class="find_container">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="find_container-img" >
                                   <img src="~/image/alisverissepeti.png" style="height:250px;" />
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <h3>
                                    ARADIĞIN HERŞEY<br />
                                    A DAN Z YE BURADA!
                                </h3>
                                <p>
                                    FIRSATLARI KAÇIRMA! HEMEN ALIŞVERİŞE BAŞLA!
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="shop_container">
                        <div class="row">
                            <div class="col-sm-6">
                                <p>
                                    Ev & Bakım
                                </p>
                                <h3>
                                    Tüm Kategorileri İncele!
                                </h3>
                                <div>
                                    <a asp-area="Customer" asp-controller="Shop" asp-action="HomePage">
                                        Daha Fazlası
                                    </a>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="shoe_img-box">
                                    <img src="~/image/evkozmetiği.jpg" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="find_img-box">
                        <img src="~/image/find-hero.png" alt="" />
                    </div>
                </div>
            </div>
        </div>
    </section>
  

    <!-- footer section -->
   <footer class="bg-dark text-light">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-4 mb-3">
        <h4>ATSEPETE</h4>
        <p>ATSEPETE, online alışverişin en kolay hali. Siz de binlerce ürün arasından seçiminizi yapın.</p>
      </div>
      <div class="col-md-4 mb-3">
        <h4>Adres</h4>
        <p>34000 İstanbul/Ataşehir<br> 5.cadde karanfil sokak çiçek mah. No:5</p>
      </div>
      <div class="col-md-4 mb-3">
        <h4>İletişim</h4>
        <p><i class="bi bi-telephone me-2"></i> +90 555 555 55 55</p>
        <p><i class="bi bi-envelope me-2"></i> atsepete@atsepete.com</p>
      </div>
    </div>
    <hr class="my-4">
    <div class="row">
      <div class="col-md-6 mb-3">
        <p>&copy; @DateTime.Now.Year ATSEPETE. Tüm hakları saklıdır.</p>
      </div>
      <div class="col-md-6 mb-3">
        <ul class="list-inline float-md-end">
          <li class="list-inline-item"><a href="#"><i class="bi bi-facebook"></i></a></li>
          <li class="list-inline-item"><a href="#"><i class="bi bi-twitter"></i></a></li>
          <li class="list-inline-item"><a href="#"><i class="bi bi-instagram"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

    <!-- footer section -->

    <script src="~/bootstrap/js/bootstrapindex.js"></script>
    <script src="~/bootstrap/js/jquery-3.4.1.min.js"></script>
    <script>
        function openNav() {
            document.getElementById("myNav").style.width = "100%";
        }

        function closeNav() {
            document.getElementById("myNav").style.width = "0%";
        }
    </script>
        @await Component.InvokeAsync("NToastNotify")
</body>

</html>

